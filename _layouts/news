---
layout: page
---
{%- assign cdate = site.time | date: '%s' | plus: 0 -%}

{%- assign fevtc = 0 -%}
{%- for new in site.news -%}
  {%- assign pdate = new.date | date: '%s' | plus: 0 -%}
  {%- if pdate > cdate -%}
    {%- assign fevtc = fevtc | plus: 1 -%}
  {%- endif -%}
{%- endfor -%}

<section id="news">
  <h1 id="h-news">Новости</h1>
  <ul>
  {%- if fevtc > 0 -%}
    {%- for new in site.news -%}
      {%- assign pdate = new.date | date: '%s' | plus: 0 -%}
      {%- if pdate > cdate -%}
      <li>{{ new.date | date: '%Y.%m.%d %H:%M'}} <a href="{{ new.url }}">{{ new.title }}</a></li>
      {%- endif -%}
    {%- endfor -%}
  {%- endif -%}
  </ul>
</section>
<section id="contents">
  {{ content }}
</section>
